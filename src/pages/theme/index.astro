---
import Layout from "@layouts/BaseLayout.astro";
import Section from "@atoms/Section.astro";
import Wrapper from "@atoms/Wrapper2.astro";
import Text from "@atoms/Text.astro";
import Button from "@atoms/Button.astro";
import Link from "@atoms/Link.astro";
import List from "@atoms/List.astro";
---

<Layout title="Design System & Theme" description="Découvrez notre design system complet.">

  <!-- Hero Section -->
  <Section preset="primary" tag="header">
    <Wrapper cols={1} textAlign="center">
      <Text tag="h1">Design System & Thème</Text>
      <Text tag="p">
        Un design system complet et cohérent pour créer des interfaces modernes et accessibles.
      </Text>
      <Button href="#colors" text="Explorer" preset="accent" />
    </Wrapper>
  </Section>

  <!-- Couleurs -->
  <Section id="colors" preset="default" tag="section">
    <Wrapper cols={1} textAlign="center" marginBottom="3rem">
      <Text tag="h2">Palette de couleurs</Text>
      <Text tag="p">Les couleurs fondamentales de notre design system.</Text>
    </Wrapper>

    <Wrapper cols={3} gap="2rem" display="grid">
      <Wrapper preset="primary" padding="2rem" textAlign="center">
        <Text tag="h3" textColor="white">Primary</Text>
        <Text tag="p" textColor="white">Couleur principale</Text>
      </Wrapper>
      
      <Wrapper preset="secondary" padding="2rem" textAlign="center">
        <Text tag="h3" textColor="white">Secondary</Text>
        <Text tag="p" textColor="white">Couleur secondaire</Text>
      </Wrapper>
      
      <Wrapper preset="accent" padding="2rem" textAlign="center">
        <Text tag="h3">Accent</Text>
        <Text tag="p">Couleur d'accent</Text>
      </Wrapper>
    </Wrapper>
  </Section>

  <!-- Typographie -->
  <Section preset="secondary" tag="section">
    <Wrapper cols={1} textAlign="center" marginBottom="3rem">
      <Text tag="h2">Typographie</Text>
      <Text tag="p">Hiérarchie typographique pour structurer l'information.</Text>
    </Wrapper>

    <Wrapper cols={2} gap="3rem" display="grid">
      <Wrapper>
        <Text tag="h1">Titre H1</Text>
        <Text tag="h2">Titre H2</Text>
        <Text tag="h3">Titre H3</Text>
        <Text tag="h4">Titre H4</Text>
        <Text tag="h5">Titre H5</Text>
        <Text tag="h6">Titre H6</Text>
      </Wrapper>
      
      <Wrapper>
        <Text tag="p">
          Paragraphe normal avec du texte de contenu pour démontrer 
          la lisibilité et l'espacement des lignes.
        </Text>
        <Text tag="small">
          Texte petit pour les mentions et notes.
        </Text>
      </Wrapper>
    </Wrapper>
  </Section>

  <!-- Composants -->
  <Section preset="default" tag="section">
    <Wrapper cols={1} textAlign="center" marginBottom="3rem">
      <Text tag="h2">Composants</Text>
      <Text tag="p">Éléments réutilisables du design system.</Text>
    </Wrapper>

    <Wrapper cols={3} gap="2rem" display="grid">
      <Wrapper preset="default" padding="1.5rem" border shadow>
        <Text tag="h3">Boutons</Text>
        <Wrapper gap="1rem" display="flex" flexDirection="column" marginTop="1rem">
          <Button text="Primary" preset="primary" />
          <Button text="Secondary" preset="secondary" />
          <Button text="Accent" preset="accent" />
        </Wrapper>
      </Wrapper>
      
      <Wrapper preset="default" padding="1.5rem" border shadow>
        <Text tag="h3">Liens</Text>
        <Wrapper gap="1rem" display="flex" flexDirection="column" marginTop="1rem">
          <Link href="#" text="Lien standard" />
          <Link href="#" text="Lien avec icône" icon={{ name: 'mdi:arrow-right', side: 'right' }} />
        </Wrapper>
      </Wrapper>
      
      <Wrapper preset="default" padding="1.5rem" border shadow>
        <Text tag="h3">Listes</Text>
        <List
          items={[
            "Premier élément",
            "Deuxième élément", 
            "Troisième élément"
          ]}
          icon="mdi:check"
          showMarkers={false}
          marginTop="1rem"
        />
      </Wrapper>
    </Wrapper>
  </Section>

  <!-- Call to Action -->
  <Section preset="primary" tag="section">
    <Wrapper cols={1} textAlign="center">
      <Text tag="h2">Explorez le design system</Text>
      <Text tag="p">
        Découvrez tous les composants en action sur la page de démonstration.
      </Text>
      <Wrapper marginTop="2rem">
        <Button href="/" text="Voir la démo complète" preset="accent" size="large" />
      </Wrapper>
    </Wrapper>
  </Section>

</Layout>