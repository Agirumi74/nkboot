<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const filterLinks = document.querySelectorAll('#legal-1720 .cs-option');
        const contentSections = document.querySelectorAll('#legal-1720 .cs-faq-group');
        const activeClass = 'cs-active';
        const hiddenClass = 'cs-hidden';

        function activateTab(targetId) {
            if (!targetId || !targetId.startsWith('#')) return;
            const targetElement = document.querySelector(targetId);
            if (!targetElement) return;

            filterLinks.forEach(link => {
                link.classList.toggle(activeClass, link.getAttribute('href') === targetId);
            });

            contentSections.forEach(section => {
                section.classList.toggle(hiddenClass, section.id !== targetId.substring(1));
            });
        }

        filterLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const targetId = link.getAttribute('href');
                if (window.history.pushState) {
                    window.history.pushState(null, null, targetId);
                } else {
                    window.location.hash = targetId;
                }
                activateTab(targetId);
            });
        });

        window.addEventListener('popstate', () => {
            const targetId = window.location.hash || (filterLinks.length > 0 ? filterLinks[0].getAttribute('href') : '');
            activateTab(targetId);
        });

        const initialTargetId = window.location.hash || (filterLinks.length > 0 ? filterLinks[0].getAttribute('href') : '');
        activateTab(initialTargetId);
    });
</script>